@model List<Customers>
@{
    ViewBag.Title = "List";


}

<h2>Customers</h2>

<form method="get" action="~/Customer/List"
         data-ajax-container="#page-data-content"  >
    <div class="panel panel-primary">
        <div class="panel-body form-inline">
            <input type="text" name="search" class="form-control " placeholder="Search..." />
            <button type="submit" class="btn btn-default">Search</button>
        </div>
    </div>
</form>


<div id="page-data-content">
    @{
        int counter = 1;
    }
    <table class="table table-bordered table-condensed table-responsive table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th>ID</th>
                <th>Company</th>
                <th>Contact</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@(counter++)</td>
                    <td>@customer.CustomerID</td>
                    <td>@customer.CompanyName</td>
                    <td>@customer.ContactName</td>
                    <td>@customer.Country</td>
                </tr>
            }
        </tbody>

    </table>
</div>